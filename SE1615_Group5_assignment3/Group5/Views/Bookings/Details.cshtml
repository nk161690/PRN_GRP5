@model Group5.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Booking</h4>
<hr />
<div class="col-md-4">
    @{
        int nRows = (int)ViewBag.room.NumberRows;
        int nCols = (int)ViewBag.room.NumberCols;
        string seatStatus = new string('0', nRows * nCols);
        char[] seats = seatStatus.ToCharArray();

            for (int i = 0; i < ViewBag.bookings.SeatStatus.Length; i++)
                if (ViewBag.bookings.SeatStatus[i] == '1') seats[i] = '1';


        for (int i = 0; i < nRows; i++)
        {
            for (int j = 0; j < nCols; j++)
            {
                int index = i * nCols + j;
                if (seats[index] == '1')
                {
                    <input type="checkbox" name="@index" checked disabled />
                }
                else
                {
                    <input type="checkbox" name="@index" disabled />
                }
                if (j == nCols - 1)
                {
                    <br />
                }
            }

        }
    }
</div>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.bookings.BookingId">Edit</a> |
    <a asp-action="Index" asp-route-id="@ViewBag.show.ShowId">Back to List</a>
</div>
