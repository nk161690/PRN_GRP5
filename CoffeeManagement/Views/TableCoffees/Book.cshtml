@{
    ViewData["Title"] = "Book";
}
<script src="~/js/jquery-3.5.1.min.js"></script>

<h1></h1>

<h4>Table @ViewBag.id</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewBag.id" />
            <div class="form-group">
                <select class="form-control" id="category" name="category" asp-items="@ViewBag.FoodCategory"></select>
            </div>
            <div class="form-group">
                <select class="form-control" id="item" name="item"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Amount</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

<script type="text/javascript">
$(document).ready(function () {
    $('#item').html('<option>-- Select an item --</option>');
    $('#category').change(function () {
        var url = '@Url.Content("~/")' + "TableCoffees/Food";
        var ddlsource = "#category";
        $.getJSON(url, { id: $(ddlsource).val() }, function(data) {
            var item = '<option>-- Select an item --</option>';
            $('#item').empty();
            $.each(data, function(i, food) {
                item += "<option value='" + food.value + "'>" + food.text + "</option>"
            });
            $('#item').html(item);
        });
    });
}); 
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
